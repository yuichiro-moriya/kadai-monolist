<h1>Haveランキング</h1>
<% if @items.present? %>
  <div class="row">
    <% @items.each_with_index do |item, index| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="">
            </div>
            
                <div class="buttons text-center">
                  <div class="btn-group" role="group">
                    <% if logged_in? %>
                      <button><%= render 'ownerships/want_button', item: item %></button>
                      <button><%= render 'ownerships/have_button', item: item %></button>
                    <% end %>
                  </div>
                </div>
            
            <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[item.id] %>Haves</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>